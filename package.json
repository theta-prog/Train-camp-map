{
  "name": "campsite-search-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --project tsconfig.strict.json",
    "type-check": "tsc --noEmit",
    "check-types": "tsc --noEmit --pretty",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:types": "tsc --noEmit --skipLibCheck false",
    "validate": "npm run typecheck && npm run lint",
    "validate:strict": "npm run typecheck:strict && npm run lint",
    "full-check": "./scripts/typecheck.sh",
    "ci": "npm run typecheck && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vis.gl/react-google-maps": "^1.5.3",
    "next": "^14.2.30",
    "next-intl": "^4.1.0",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/google.maps": "^3.54.10",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1"
  }
}
